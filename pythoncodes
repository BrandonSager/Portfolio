QUESTION 7

x = input('num1:')
y = input('num2:')
try:
    z = int(x)/int(y)
except ZeroDivisionError as e:
    print('division by zero exception')
    z = None
except Exception as e:
    print(e)
    z = None
print(z)

QUESTION 8

class Human:
    def __init__(self,name,occupation):
        self.name=name
        self.occupation = occupation

    def do_work(self):
        if self.occupation == 'tennis player':
            print(self.name, 'plays tennis')
        elif self.occupation == 'actor':
                print(self.name, 'shoots a film')
        
    def speaks(self):
        print(self.name, 'says how are you?')
    
tom = Human('Tom Cruise', 'actor')
tom.do_work()
tom.speaks()

maria = Human('Maria Sharapova', 'tennis player')
maria.do_work()
maria.speaks()

QUESTION 9

class Employee:
    def __init__(self, id, name):
        self.id = id
        self.name = name
        
    
    def diet(self):
        if self.name == 'dave':
            print(self.name, 'no sugar')
        if self.name == 'steve':
            print(self.name, 'no pork')

    def level(self):
        if self.id == 1:
            print(self.id, 'High')
        elif self.id ==2:
            print(self.id, 'Low')
            
dave = Employee(2, 'dave')
steve = Employee(1, 'steve')

steve.level()
